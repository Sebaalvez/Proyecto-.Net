@using Obligatorio2Clases;
@{
    ViewBag.Title = "MostrarDatos";
}

<h2>Mostrar Datos</h2>
<body style="background-image:url(https://trucoslondres.com/wp-content/uploads/2017/05/E.jpg) ">
    <div style="background-color:#F4D8AC;height:20vh;width:50vw ; border-color : black; border:solid">
        <p></p>
        <form method="post" action="~/ABM/Index">
            <label for="ventas">Seleccione una venta</label>
            <select name="ventas" onchange="form.action = '/Vendedor/MostrarDatos'; form.submit();">
                <option value="Seleccione una venta">Seleccione una venta</option>
                @foreach (var item in Obligatorio2Clases.Sistema.Instancia.Compras)

            {
                if (Obligatorio2Clases.Sistema.Instancia.RetornoVaSessio(Session["Vendedor"].ToString()) == item.Vendedor.Nombre.ToString())
                {
                    if (ViewBag.ventas != null && item.toStringDatosVenta == ViewBag.ventas)
                    {

                            <option id="cliente" value="@item.toStringDatosVenta" name="cliente" selected>@item.toStringDatosVenta</option>
                        }
                        else
                        {
                            <option id="cliente" value="@item.toStringDatosVenta" name="cliente">@item.toStringDatosVenta</option>
                        }
                    }


                }

            </select>
            <br />
            <label for="cliente">Cliente</label>
            <select name="cliente">
                @foreach (Obligatorio2Clases.Compra c in ViewBag.cliente)
            {
                    <option value="@c.Cliente.Documento ">@c.Cliente.Nombre  @c.Cliente.Apellido CI: @c.Cliente.Documento</option>
                }
            </select>
            <br />
            <label for="apartamento">Apartamento</label>
            <select name="apartamento">
                @foreach (Obligatorio2Clases.Compra c in ViewBag.apartamento)
            {
                    <option value="@c.Apartamento.toStringDatosApto">@c.Apartamento.toStringDatosApto</option>
                }
            </select>
            <br />
            <label for="comision">Comision :</label>
            <select name="comision">
                @foreach (Obligatorio2Clases.Compra c in ViewBag.apartamento)
            {
                    <option value="@c.ComisionFinal1">@c.ComisionFinal1"</option>
                }
            </select>

        </form>
    </div>
</body>